
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 2rem;
  background-color: #f4f4f4;
  color: #333;
}

header, footer {
  text-align: center;
  margin-bottom: 2rem;
}

h1 {
  color: #007acc;
}

a {
  color: #007acc;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

main {
  max-width: 700px;
  margin: auto;
  background: white;
  padding: 2rem;
  border-radius: 8px;
}
